<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/mainActivity_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/mainActivity_toolbar" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/mainActivity_toolbar"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:contentInsetStart="0dp"
        app:contentInsetStart="0dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/mainActivity_profile"
                android:layout_weight="1"
                android:layout_width="40dp"
                android:layout_height="75dp"
                android:background="@drawable/main_1_on"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="10dp"/>

            <ImageView
                android:layout_marginRight="20dp"
                android:id="@+id/mainActivity_rank"
                android:layout_weight="1"
                android:layout_width="40dp"
                android:layout_height="75dp"
                android:background="@drawable/main_2_off"/>

            <ImageView
                android:id="@+id/mainActivity_stats"
                android:layout_weight="1"
                android:layout_width="40dp"
                android:layout_height="75dp"
                android:background="@drawable/main_3_off"/>


            <ImageView
                android:id="@+id/mainActivity_setting"
                android:layout_weight="1"
                android:layout_width="40dp"
                android:layout_height="75dp"
                android:background="@drawable/main_4_off"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp" />


        </LinearLayout>
    </android.support.v7.widget.Toolbar>

</RelativeLayout>
